<% layout("/layouts/boilerplate") %>

<div class="container mt-5 mb-5">
  <h2 class="text-center mb-4 text-dark">My Bookings</h2>

  <% if (bookings.length === 0) { %>
    <div class="alert alert-info text-center">
      You have no bookings yet. <a href="/listings" class="alert-link">Browse listings</a> to make one!
    </div>
  <% } else { %>
    <div class="row">
      <% bookings.forEach(function(booking) { %>
        <div class="col-md-6 col-lg-4 mb-4">
          <div class="card shadow-sm h-100 border-0">
            <img
              src="<%= booking.listing.image && booking.listing.image.url ? booking.listing.image.url : '/images/default.jpg' %>"
              class="card-img-top"
              alt="<%= booking.listing.title %>"
              style="height: 200px; object-fit: cover;"
            />
            <div class="card-body d-flex flex-column">
              <h5 class="card-title text-dark"><%= booking.listing.title %></h5>

              <p class="mb-1">
                <strong>Check-in:</strong>
                <%= booking.checkIn ? new Date(booking.checkIn).toDateString() : "N/A" %>
              </p>
              <p class="mb-1">
                <strong>Check-out:</strong>
                <%= booking.checkOut ? new Date(booking.checkOut).toDateString() : "N/A" %>
              </p>
              <p class="mb-1">
                <strong>Total Price:</strong> â‚¹<%= booking.totalPrice %>
              </p>
              <p class="mb-2">
                <strong>Status:</strong>
                <span class="<%= booking.status === 'cancelled' ? 'text-danger' : 'text-success' %>">
                  <%= booking.status %>
                </span>
              </p>

              <div class="mt-auto">
                <a href="/bookings/<%= booking._id %>" class="btn btn-outline-primary w-100 mb-2">
                  View Details
                </a>

                <% if (booking.status !== "cancelled") { %>
                  <form action="/bookings/<%= booking._id %>/cancel" method="POST">
                    <button class="btn btn-danger w-100">Cancel Booking</button>
                  </form>
                <% } else { %>
                  <button class="btn btn-secondary w-100" disabled>Cancelled</button>
                <% } %>
              </div>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  <% } %>
</div>

